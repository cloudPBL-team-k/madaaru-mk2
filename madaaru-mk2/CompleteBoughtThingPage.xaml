    <StackLayout>
        <BoxView VerticalOptions="EndAndExpand" />
        <Label Text="購入店舗" HorizontalOptions="Center" FontAttributes="Bold"></Label>
        <Label Text="" x:Name="shopNameLabel" HorizontalOptions="Center"/>
        <Label Text="商品の名前" HorizontalOptions="Center" FontAttributes="Bold"></Label>
        <Label Text="" x:Name="itemNameLabel" HorizontalOptions="Center"/>
        <Label Text="購入個数" HorizontalOptions="Center" FontAttributes="Bold"></Label>
        <Label Text="" x:Name="itemNumLabel" />
        <Label Text="次の購入予定日: " x:Name="nextBuyDateLabel" />
