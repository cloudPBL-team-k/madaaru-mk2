<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="madaarumk2.SignUpPage"
             BackgroundColor="#EEEEEE">
    <ContentPage.Content>
        <StackLayout>
            <!--Placeholderプロパティでプレースホルダの表示-->
            <Entry Placeholder = "ユーザ名" x:Name="nameInput" PlaceholderColor="Gray"/>
            <!--IsPasswordプロパティで入力文字を隠す-->
            <Entry Placeholder ="パスワード" Text = "" IsPassword = "true" x:Name="passInput" PlaceholderColor="Gray"/>
            <Entry Placeholder ="パスワードを再入力" Text = "" IsPassword = "true" x:Name="passInput2" PlaceholderColor="Gray"/>
            <Button Text="Sign-Up" Clicked="SignupBtnClicked" BackgroundColor="Orange" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>